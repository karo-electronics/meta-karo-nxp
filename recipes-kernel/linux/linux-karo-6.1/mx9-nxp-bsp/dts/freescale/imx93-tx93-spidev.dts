/dts-v1/;

/plugin/;

#include <dt-bindings/gpio/gpio.h>

&{/chosen} {
	overlays {
		tx93-spidev;
	};
};

&lpspi3 {
	status = "okay";

	spidev@0 {
		compatible = "karo,spidev-test";
		cs-gpios = <&gpio2 8 GPIO_ACTIVE_LOW>;
		reg = <0>;
	};
};
