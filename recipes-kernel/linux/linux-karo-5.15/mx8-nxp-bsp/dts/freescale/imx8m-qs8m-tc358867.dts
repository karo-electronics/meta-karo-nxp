/dts-v1/;

/plugin/;

&{/chosen} {
	overlays {
		qs8m-tc358867;
	};
};

&i2c2 {
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";

	dac@60 {
		compatible = "microchip,mcp4725";
		reg = <0x60>;
		vdd-supply = <&reg_vdd_3v3>;
	};
};

&lcdif {
	status = "okay";
};

&mipi_dsi {
	status = "okay";

	panel-bridge@0 {
		compatible = "toshiba,tc358867xbg";
		reg = <0>;

		port {
			tc358867_from_dsi: endpoint {
				remote-endpoint = <&dsi_to_tc358867>;
			};
		};

		display-timings {
			lcd {
				// all EDT displays - Leave clock at 25175000!!!
				clock-frequency = <25175000>;
				hactive = <320>;
				vactive = <240>;
				hback-porch = <38>;
				hfront-porch = <20>;
				vback-porch = <14>;
				vfront-porch = <4>;
				hsync-len = <30>;
				vsync-len = <4>;
				hsync-active = <0>;
				vsync-active = <0>;
				de-active = <1>;
				pixelclk-active = <0>;
			};
		};
	};

	port@1 {
		reg = <1>;

		dsi_to_tc358867: endpoint {
			remote-endpoint = <&tc358867_from_dsi>;
		};
	};
};
